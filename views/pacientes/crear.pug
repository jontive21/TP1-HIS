extends ../layout

block content
  h1 Nuevo Paciente

  if error
    .alert.alert-danger= error
  if success
    .alert.alert-success= success

  form(action="/pacientes/crear" method="POST")
    .mb-3
      label.form-label(for="dni") DNI
      input.form-control(type="text" name="dni" required)
    .mb-3
      label.form-label(for="nombre") Nombre
      input.form-control(type="text" name="nombre" required)
    .mb-3
      label.form-label(for="apellido") Apellido
      input.form-control(type="text" name="apellido" required)
    .mb-3
      label.form-label(for="telefono") Teléfono
      input.form-control(type="text" name="telefono" required)
    .mb-3
      label.form-label(for="sexo") Sexo
      input.form-control(type="text" name="sexo" required)
    button.btn.btn-success(type="submit") Guardar
    a.btn.btn-secondary.ms-2(href="/pacientes") Cancelar

    extends ../../layout

block content
  .container.mt-4
    h1.mb-4 Nuevo Paciente
    
    if error
      .alert.alert-danger.alert-dismissible.fade.show
        | #{error}
        button.btn-close(type="button", data-bs-dismiss="alert")
    
    form(action="/pacientes/create", method="POST")
      .row.mb-3
        .col-md-6
          label.form-label(for="nombre") Nombre
          input.form-control(type="text", id="nombre", name="nombre", required)
        .col-md-6
          label.form-label(for="apellido") Apellido
          input.form-control(type="text", id="apellido", name="apellido", required)
      
      .row.mb-3
        .col-md-6
          label.form-label(for="dni") DNI
          input.form-control(type="text", id="dni", name="dni", required)
        .col-md-6
          label.form-label(for="fecha_nacimiento") Fecha de Nacimiento
          input.form-control(type="date", id="fecha_nacimiento", name="fecha_nacimiento", required)
      
      .row.mb-3
        .col-md-6
          label.form-label(for="genero") Género
          select.form-select(id="genero", name="genero", required)
            option(value="") Seleccionar...
            option(value="M") Masculino
            option(value="F") Femenino
        .col-md-6
          label.form-label(for="telefono") Teléfono
          input.form-control(type="tel", id="telefono", name="telefono")
      
      .mb-3
        label.form-label(for="direccion") Dirección
        textarea.form-control(id="direccion", name="direccion", rows="2")
      
      .row.mb-3
        .col-md-6
          label.form-label(for="seguro_medico") Seguro Médico
          input.form-control(type="text", id="seguro_medico", name="seguro_medico")
        .col-md-6
          label.form-label(for="contacto_emergencia") Contacto de Emergencia
          input.form-control(type="text", id="contacto_emergencia", name="contacto_emergencia")
      
      .row.mb-3
        .col-md-6
          label.form-label(for="telefono_emergencia") Teléfono de Emergencia
          input.form-control(type="tel", id="telefono_emergencia", name="telefono_emergencia")
      
      .d-flex.justify-content-end.mt-4
        button.btn.btn-secondary.me-2(type="button", onclick="history.back()") Cancelar
        button.btn.btn-primary(type="submit") Guardar Paciente