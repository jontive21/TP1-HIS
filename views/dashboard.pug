extends layout

block content
  .container.mt-4
    h1 Sistema HIS - Admisión y Recepción
    
    if error
      .alert.alert-danger.alert-dismissible.fade.show
        | #{error}
        button.close(type='button', data-dismiss='alert', aria-label='Close')
          span(aria-hidden='true') &times;
    
    .welcome-card.mb-4
      h3 ¡Bienvenido al Dashboard!
      p Inicio rápido a las funciones de admisión y control hospitalario
    
    .stats-container
      .stat-card
        h4 Cama(s) Disponible(s)
        .stat-value #{camasDisponibles}
        .stat-subtitle de #{totalCamas} total
      
      .stat-card
        h4 Pacientes Internados
        .stat-value #{pacientesInternados}
      
      .stat-card
        h4 Admisiones Hoy
        .stat-value #{admisionesHoy}
      
      .stat-card
        h4 Altas Médicas Hoy
        .stat-value #{altasHoy}
    
    .user-info.mt-4
      p Rol: #{rol} | Último acceso: #{ultimoAcceso}
    
    footer.mt-5
      p © 2025 – HIS - Sistema Hospitalario Integrado