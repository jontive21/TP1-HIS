extends layout
block content
  .row.text-center
    .col-12
      .jumbotron.bg-primary.text-white.p-5.rounded
        h1.display-4 Sistema HIS
        h2.lead Módulo de Admisión y Recepción de Pacientes
        p.lead= mensaje || 'Gestión hospitalaria simplificada'
        hr.my-4
        p Endpoint de inicio del módulo: 
          strong /admisiones
        a.btn.btn-light.btn-lg(href='/admisiones') Ir a Admisiones
  .row.mt-5
    .col-md-3.mb-3
      .card.text-center
        .card-body
          h5.card-title Admisiones
          p.card-text Gestionar admisiones de pacientes
          a.btn.btn-primary(href='/admisiones') Entrar
    .col-md-3.mb-3
      .card.text-center
        .card-body
          h5.card-title Pacientes
          p.card-text Ver lista de pacientes
          a.btn.btn-success(href='/pacientes') Entrar
    .col-md-3.mb-3
      .card.text-center
        .card-body
          h5.card-title Camas
          p.card-text Estado de las camas
          a.btn.btn-info(href='/camas') Entrar
    .col-md-3.mb-3
      .card.text-center
        .card-body
          h5.card-title Habitaciones
          p.card-text Ver habitaciones
          a.btn.btn-warning(href='/habitaciones') Entrar  