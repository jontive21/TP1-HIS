extends ../layout

block content
  h2 Alta Hospitalaria

  if message
    .alert.alert-danger #{message}

  form(method="POST" action="/medico/alta")
    input(type="hidden" name="paciente_id" value=paciente.id)

    .form-group
      label Motivo de Alta
      textarea.form-control(name="motivo_alta" rows="3" required)

    .form-group
      label Instrucciones Posteriores
      textarea.form-control(name="instrucciones" rows="5" required)

    button.btn.btn-primary(type="submit") Registrar Alta