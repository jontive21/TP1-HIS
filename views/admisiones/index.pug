//- views/admisiones/index.pug

extends ../layout

block content
  h2 Lista de Admisiones
  if admisiones && admisiones.length > 0
    table(border="1")
      thead
        tr
          th ID
          th Paciente ID
          th Cama ID
          th Médico responsable
          th Motivo
          th Estado
          th Fecha ingreso
      tbody
        each admision in admisiones
          tr
            td= admision.id
            td= admision.paciente_id
            td= admision.cama_id
            td= admision.medico_responsable_id
            td= admision.motivo_internacion
            td= admision.estado
            td= admision.fecha_ingreso
  else
    p No hay admisiones registradas aún.