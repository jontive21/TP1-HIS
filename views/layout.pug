doctype html
html(lang='es')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title || 'Sistema HIS - Admisión de Pacientes'
    
    // Bootstrap CSS (simple)
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet')
    
  body
    // Navegación simple
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      .container
        a.navbar-brand(href='/') Sistema HIS
        
        .navbar-nav
          a.nav-link(href='/admisiones') Admisiones
          a.nav-link(href='/pacientes') Pacientes
          a.nav-link(href='/camas') Camas
          a.nav-link(href='/habitaciones') Habitaciones
    // Contenido principal
    .container.mt-4
      if error
        .alert.alert-danger= error
      if success
        .alert.alert-success= success
      
      block content
    // Scripts básicos
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')