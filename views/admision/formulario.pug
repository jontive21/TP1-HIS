extends ../layout

block content
  h2 Asignar Cama

  if message
    .alert.alert-danger #{message}
  if success
    .alert.alert-success #{success}

  form(method="POST" action="/admision/asignar")
    input(type="hidden" name="paciente_id" value=paciente.id)
    input(type="hidden" name="sexo" value=paciente.sexo)

    label Selecciona una cama:
    select.form-control(name="cama_id")
      each cama in camas
        option(value=cama.id) Habitaci√≥n #{cama.habitacion_numero}, Cama #{cama.cama_numero}

    button.btn.btn-primary(type="submit") Asignar Cama