extends layout

block content
  .container.mt-5
    .card.shadow
      .card-header.bg-danger.text-white
        h2= title || 'Error'
      .card-body
        h3.card-title= message || 'Ocurri√≥ un error inesperado'
        
        if error
          .mt-4
            h5 Detalles del error:
            pre= error.stack || error.message || JSON.stringify(error, null, 2)
        
        .mt-4
          a.btn.btn-primary(href="/dashboard") 
            i.fas.fa-arrow-left.me-2
            | Volver al inicio